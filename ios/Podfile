# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

# Use dynamic frameworks
use_frameworks!

target 'Runner' do
  # Pods for Runner
  pod 'Firebase/Auth'
  pod 'Firebase/Core'
  pod 'Firebase/Database'

  # If you're using any other Firebase services, add them here:
  # pod 'Firebase/Storage'
  # pod 'Firebase/Messaging'

  # Ensure proper configuration for Flutter iOS projects
  flutter_application_path = File.expand_path('../..')
  load File.join(flutter_application_path, '.flutter-plugins')

  target 'RunnerTests' do
    inherit! :search_paths
    # Pods for testing (if you have any test dependencies)
  end
end
